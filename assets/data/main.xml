<box width="100%" height="100%">
  <vbox width="100%" height="100%" style="padding: 8px;">
    <style>
      #btnUp .icon, #btnEnable .icon, #btnDisable .icon, #btnDown .icon {
      width: 32px;
      height: 32px;
      }
    </style>
    
    <menubar id="menubar" width="100%">
      <menu text="Test">
