<?xml version="1.0" encoding="utf-8"?>
<box width="100%" height="100%">
  <vbox width="100%" height="100%" style="padding: 8px;">
    <style>
      #btnUp .icon, #btnEnable .icon, #btnDisable .icon, #btnDown .icon {
      width: 32px;
      height: 32px;
      }
    </style>
    
    <menubar width="100%">
      <menu text="Test">
        <menucheckbox id="menuCheck" text="Value" />
      </menu>
    </menubar>

    <spacer height="100%" />

    <tabview id="tv2" width="260" height="100">
      <vbox text="Page 1" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <button text="Page 1" />
        <textfield placeholder="Test 1" />
        <textfield placeholder="Test 2" />
      </vbox>
      <vbox text="Page 2" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <form id="testForm">
          <textfield placeholder="Test 1" id="testFormValue" validator="required" />
        </form>
        <button id="testFormSubmit" text="Submit"/>
      </vbox>
      <box text="Page 3" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <button text="Page 3" />
      </box>
      <box text="Page 4" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <button text="Page 4" />
      </box>
    </tabview>
    <!-- 
      border: 1px solid #000; 
    -->
    <box width="300" height="200" style="border: 1px solid #000; background-color: #3d3f41; padding: 8px; border-top-left-radius: 8px;">
      <vbox width="100%" height="100%">
        <label text="Test Box" />
        <spacer height="100%" />
        <label text="Test Box" />
      </vbox>
    </box>
    <checkbox id="baseCheck" text="Value" />
  </vbox>
</box>